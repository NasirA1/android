<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:id="@+id/layout1"
>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="499dp" android:id="@+id/content"
    />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonPanel"
            android:orientation="horizontal"
    >
        <Button
                android:text="Shuffle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btnShuffle" android:layout_weight="1"/>
        <Button
                android:text="Bicycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnBicycleNewDeckOrder"
                android:layout_weight="1"/>
        <Button
                android:text="Spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnSpanishNewDeckOrder"
                android:layout_weight="1"/>
        <Button
                android:text="Stay Stack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnStayStack" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp" android:id="@+id/buttonPanel2">
        <Button
                android:text="Faro (out)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnFaro" android:layout_weight="1"/>
        <Button
                android:text="Mnemonica"
                android:layout_width="142dp"
                android:layout_height="wrap_content" android:id="@+id/btnMnemonica" android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>